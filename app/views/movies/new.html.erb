<h1>New movie</h1>

<%= error_messages_for :movie %>

<% form_for(@movie) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>One sheet url</b><br />
    <%= f.text_field :one_sheet_url %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>
